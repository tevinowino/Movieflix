extends layout.pug
block content
  section(class="py-16 px-6")
    h2(class="text-3xl font-bold mb-8") New Releases
    div(class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-6")
      // Movie Card (repeated 5 times)
      each i in [1, 2, 3, 4, 5]
        div(class="bg-gray-800 rounded-lg overflow-hidden")
          img(src="/api/placeholder/300/450", alt="Movie Poster", class="w-full h-auto")
          div(class="p-4")
            h3(class="font-semibold mb-1") Movie Title
            p(class="text-sm text-gray-400") Action, Adventure
            div(class="flex items-center mt-2")
              svg(class="w-4 h-4 text-yellow-400 mr-1", fill="currentColor", viewBox="0 0 20 20")
                path(d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z")
              span(class="text-sm") 4.5

  section(class="py-16 px-6 bg-gray-800")
    h2(class="text-3xl font-bold mb-8") Upcoming Movies
    div(class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8")
      // Upcoming Movie Card (repeated 4 times)
      each i in [1, 2, 3, 4]
        div(class="bg-gray-900 rounded-lg overflow-hidden")
          img(src="/api/placeholder/400/600", alt="Upcoming Movie Poster", class="w-full h-auto")
          div(class="p-4")
            h3(class="font-semibold text-lg mb-1") Upcoming Movie Title
            p(class="text-sm text-gray-400") Sci-Fi, Thriller
            p(class="text-sm text-yellow-400 mt-2") Coming Soon
  section(class="py-16 px-6")
