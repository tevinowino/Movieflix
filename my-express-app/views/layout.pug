doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title= `MovieStream | ${title}`
    link(rel='stylesheet', href='./output.css')
    script(src="https://cdn.tailwindcss.com")
    link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet")
    style.
      body {
        font-family: 'Poppins', sans-serif;
      }
  body(class="bg-gray-900 text-white")
    // Header Section
    header(class="bg-gray-800 py-4 px-6 flex items-center justify-between")
      div(class="flex items-center")
        svg(class="w-8 h-8 mr-2" fill="currentColor" viewBox="0 0 20 20")
          path(d="M2 6a2 2 0 012-2h12a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zm3.293 1.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L7.586 11H3a1 1 0 110-2h4.586L5.293 7.707a1 1 0 010-1.414z" clip-rule="evenodd" fill-rule="evenodd")
        span(class="text-2xl font-bold") MovieStream
      nav(class="hidden md:flex items-center space-x-6")
        a(href="/", class="hover:text-yellow-400") Home
        a(href="/movies", class="hover:text-yellow-400") Movies
        a(href="/tv_shows", class="hover:text-yellow-400") TV Shows
      div 
        form(action="", class="flex items-center gap-3")
          input(type="text", name="search", class="bg-gray-700 rounded-md border-none, p-1") 
          button(type="submit", class="bg-transparent border border-yellow-400 text-yellow-400 p-1 rounded hover:bg-yellow-4") Search

      div(class="flex items-center space-x-4")
        button(class="bg-transparent border border-yellow-400 text-yellow-400 px-4 py-2 rounded hover:bg-yellow-400 hover:text-gray-900") Login
        button(class="bg-yellow-400 text-gray-900 px-4 py-2 rounded hover:bg-yellow-500") Sign Up

    // Main content block that will be defined by the page extending the layout
    block content

    // Footer Section
    footer(class="bg-gray-800 py-12 px-6")
      .container(class="mx-auto")
        .flex(class="flex-wrap justify-between")
          .w-full(class="md:w-1/3 mb-8 md:mb-0")
            h4(class="text-lg font-semibold mb-4") MovieStream
            p(class="text-sm text-gray-400") Your ultimate destination for unlimited movies and TV shows.
          .w-full(class="md:w-1/3 mb-8 md:mb-0")
            h4(class="text-lg font-semibold mb-4") Quick Links
            ul(class="text-sm text-gray-400")
              li(class="mb-2")
                a(href="#", class="hover:text-yellow-400") Privacy Policy
              li(class="mb-2")
                a(href="#", class="hover:text-yellow-400") Terms of Service
              li(class="mb-2")
                a(href="#", class="hover:text-yellow-400") FAQ
